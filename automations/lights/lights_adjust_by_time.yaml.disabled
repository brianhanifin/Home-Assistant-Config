---
##############################################
## Adjust brightness every half hour
##############################################
alias: light_adjust_by_time
initial_state: true
trigger:
  - platform: time_pattern
    minutes: '/30'
# Don't bother between 8am - 7pm.
condition:
  condition: time
  after: '18:59' # >= 7pm
  before: '8:01' # <= 8am
action:
  - service: script.turn_on
    entity_id: script.lights_by_time
